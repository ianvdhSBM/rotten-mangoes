<h1>Rotten Mangoes</h1>
<%= link_to "Home", movies_path %>   |   <%= link_to "Submit a movie!", new_movie_path %>   |   <%= link_to "Admin users page", admin_users_path %>

<hr>

<%= form_tag(movies_path, method: "get") do %>
  <%= label_tag(:title, "Title") %>
  <%= text_field_tag(:title) %>

  <%= label_tag(:director, "Director") %>
  <%= text_field_tag(:director) %>

  <%= select_tag(:runtime_in_minutes, options_for_select([['Under 90 minutes', 0], ['Between 90 & 120 minutes', 1], ['Over 120 minutes', 2]])) %>

  <%= submit_tag("Search") %>

  <%= button_tag(type: 'button') do %>
    <% link_to "Reset", movies_path %>
  <% end %>

<% end %>

<hr>

<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.image.thumb.url), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p>Average rating from users: <%= movie.review_average %>/10</p>
  <p><%= movie.description %></p>
  <hr>
<% end %>